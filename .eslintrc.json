{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true
    },
    "extends": [
        "airbnb-base"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "no-console":0,
        "global-require":0,
        "import/no-extraneous-dependencies":0,
        "func-names":0,
        "brace-style": [
            "error",
            "1tbs"
        ]
    }
}